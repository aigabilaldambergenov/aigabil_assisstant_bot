from aiogram import Dispatcher, types

# –ë–∞—Å—Ç—ã –º–µ–Ω—é —Ö—ç–Ω–¥–ª–µ—Ä–ª–µ—Ä—ñ
async def cmd_start(message: types.Message):
    await message.answer("–°”ô–ª–µ–º, –ê–π–≥–∞–±—ã–ª! üëã –ú–µ–Ω —Å–µ–Ω—ñ“£ –æ“£ “õ–æ–ª—ã“£–º—ã–Ω ü§ù")

async def cmd_help(message: types.Message):
    await message.answer("–ë“±–ª –±–æ—Ç —Å–µ–Ω—ñ“£ –∫”©–º–µ–∫—à—ñ“£. –ë–∞—Ä–ª—ã“õ —Ç–∞–ø—Å—ã—Ä–º–∞–ª–∞—Ä—ã“£–¥—ã –æ—Ä—ã–Ω–¥–∞—É“ì–∞ –¥–∞–π—ã–Ω–º—ã–Ω ‚úÖ")

def register_handlers(dp: Dispatcher):
    dp.register_message_handler(cmd_start, commands=["start"])
    dp.register_message_handler(cmd_help, commands=["help"])